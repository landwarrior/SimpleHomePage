{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["src/**/*.ts", "src/**/*.vue", "vite.config.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": ["vite/client", "node"]
    }
}
